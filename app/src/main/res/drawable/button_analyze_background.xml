<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background gradient for analyze button -->
    <gradient
        android:startColor="#FF6A1B9A"
        android:centerColor="#FF7B1FA2"
        android:endColor="#FF8E24AA"
        android:angle="45" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#FF551B8A" />

    <!-- Press effect -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#FF5A1990"
                android:centerColor="#FF6B1A8C"
                android:endColor="#FF7E1E9A"
                android:angle="45" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#FF451780" />
        </shape>
    </item>

</shape>