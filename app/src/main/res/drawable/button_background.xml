<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background gradient for primary button -->
    <gradient
        android:startColor="#FF2E7D32"
        android:centerColor="#FF388E3C"
        android:endColor="#FF43A047"
        android:angle="45" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#FF1B5E20" />

    <!-- Press effect -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#FF276F2C"
                android:centerColor="#FF2E7D32"
                android:endColor="#FF388E3C"
                android:angle="45" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#FF1A4D1F" />
        </shape>
    </item>

</shape>