<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background gradient for secondary button -->
    <gradient
        android:startColor="#FF757575"
        android:centerColor="#FF616161"
        android:endColor="#FF424242"
        android:angle="45" />

    <!-- Rounded corners -->
    <corners android:radius="6dp" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#FF424242" />

    <!-- Press effect -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#FF616161"
                android:centerColor="#FF424242"
                android:endColor="#FF212121"
                android:angle="45" />
            <corners android:radius="6dp" />
            <stroke
                android:width="1dp"
                android:color="#FF212121" />
        </shape>
    </item>

</shape>