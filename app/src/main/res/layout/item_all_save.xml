<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- File Icon -->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_save"
            android:layout_marginEnd="16dp"
            app:tint="@color/primary_color" />

        <!-- Save Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_save_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2024-01-15 14:30:25"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_save_filename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sensor_data_2024-01-15_14-30-25.txt"
                android:textSize="13sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_view_save"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/button_view_save_background"
                android:text="View"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_delete_save"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/button_delete_save_background"
                android:text="Delete"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:paddingHorizontal="16dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>