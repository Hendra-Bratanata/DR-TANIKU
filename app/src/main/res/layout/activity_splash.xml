<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background_card"
    android:padding="32dp">

    <!-- Logo Container -->

    <!-- App Title -->

    <!-- Tagline -->
    <FrameLayout
        android:layout_width="364dp"
        android:layout_height="296dp">

        <!-- Background Circle -->

        <!-- DR Taniku Logo -->

        <ImageView
            android:id="@+id/agriculture_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="DR Taniku Logo"
            android:src="@drawable/drtan" />

        <ImageView
            android:id="@+id/tech_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_launcher_foreground"
            android:visibility="gone"
            app:tint="@color/tech_light_blue" />

    </FrameLayout>

    <TextView
        android:id="@+id/app_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solusi Pertanian Digital"
        android:textColor="@color/primary_light_green"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="40dp"
        android:textAlignment="center" />

    <!-- Feature Icons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <!-- Sensor Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_launcher_foreground"
                app:tint="@color/tech_light_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Analytics Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_launcher_foreground"
                app:tint="@color/tech_light_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analisis"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Plant Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_launcher_foreground"
                app:tint="@color/primary_light_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanaman"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Weather Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_launcher_foreground"
                app:tint="@color/tech_light_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuaca"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Loading Progress Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="200dp"
            android:layout_height="8dp"
            android:layout_marginBottom="12dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/tech_light_blue"
            android:progressBackgroundTint="@color/primary_dark_green" />

        <!-- Loading Percentage Text -->
        <TextView
            android:id="@+id/loading_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="@color/tech_light_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <!-- Loading Status Text -->
        <TextView
            android:id="@+id/loading_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Memuat aplikasi..."
            android:textColor="@color/primary_light_green"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <!-- Version Text -->
    <TextView
        android:id="@+id/version_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0.0"
        android:textColor="@color/primary_light_green"
        android:textSize="12sp"
        android:layout_marginTop="16dp" />

</LinearLayout>