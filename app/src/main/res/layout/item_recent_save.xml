<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- File Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_save"
            android:layout_marginEnd="12dp"
            app:tint="#757575" />

        <!-- Save Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_save_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2024-01-15 14:30:25"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_save_filename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sensor_data_2024-01-15_14-30-25.txt"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- View Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_view_save"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_view_save_background"
            android:text="View"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:paddingHorizontal="12dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>