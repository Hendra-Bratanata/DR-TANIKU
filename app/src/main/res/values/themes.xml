<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Agriculture & Technology -->
    <style name="Base.Theme.DRTaniku" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color - Agriculture Green -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_light_green</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Secondary brand color - Technology Blue -->
        <item name="colorSecondary">@color/tech_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/tech_light_blue</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_dark_green</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/primary_green</item>
    </style>

    <style name="Theme.DRTaniku" parent="Base.Theme.DRTaniku" />

    <!-- Splash Screen Theme - NoActionBar -->
    <style name="Theme.DRTaniku.NoActionBar" parent="Base.Theme.DRTaniku">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>